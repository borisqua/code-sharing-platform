pipeline {
    agent any
    stages {
//         stage("Clean up") {
//             steps {
//                 deleteDir()
//             }
//         }
        stage("Get from repository") {
            steps {
                sh "git clone https://github.com/borisqua/code-sharing-platform.git"
            }
        }
        stage("Compile") {
            steps {
                dir("code-sharing-platform"){
                    sh "./gradlew clean build"
                }
            }
        }
        stage("Test") {
            steps {
                dir("code-sharing-platform"){
                    sh "./gradlew test"
                }
            }
        }
        stage("Run") {
            steps {
                dir("code-sharing-platform"){
                    sh "java -jar '/var/jenkins_home/workspace/GitHub Pipeline/code-sharing-platform/build/libs/code-sharing-platform-0.0.1-SNAPSHOT.jar'"
                }
            }
        }
    }
}